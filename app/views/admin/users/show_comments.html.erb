<div class="container bg-white">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <br>
      <h2><%= @user.name %>ユーザーの詳細</h2>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <%= render 'follow_form',user: @user %>
      <br>
    </div>
  </div>
</div>
<br>
<div class="container bg-white">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <%= link_to '投稿', admin_user_path(@user), class: "nav-item nav-link"%>
          <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">コメント</a>
        </div>
      </nav>
    </div>
  </div>
</div>
<div class="tab-content">
  <div class="tab-pane fade show active">
    <div class="container bg-white">
      <%= render 'comments/users_comment' %>
    </div>
  </div>
</div>
