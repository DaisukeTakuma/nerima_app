<% unless current_user.blank? then %>
  <% unless current_user.id == user.id then %>
    <div id="follow_form">
      <% if current_user.active_relationships.find_by(followed_id: user.id) %>
        <%= render 'unfollow',user: @user %>
      <% else %>
        <%= render 'follow', user: @user %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <%= link_to "follow", sessions_new_path, class: "btn btn-primary", data: { confirm: "フォローするにはログインが必要です。ログインしますか？" } %>
  <br>
<% end %>