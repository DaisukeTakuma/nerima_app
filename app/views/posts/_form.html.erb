  <%= form_with(model: posts, local:  true) do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :summary, "要約" %>
      <%= f.text_area :summary, size: "1x5", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "本文" %>
      <%= f.text_area :description, size: "1x10", class: "form-control" %>
    </div>
    <div class="form-group">
      <p>カテゴリー</p>
      <% categories = %w(結婚 出産 進学 医療 福祉 仕事 就職 退職 災害 おくやみ) %>
      <% categories.each do |category| %>
        <%= check_box "category_name", "#{category}" %>
        <%= "#{category}" %>
      <% end %>
      <!--javascriptで、チェックが一つでも入ったらグレーアウトする処理を書く必要がある。
      disabled: "disabled"属性
      https://qiita.com/isaaac/items/e6ffc9b817bad749a525-->
    </div>
    <div class="form-group">
      <%= f.label :image, "画像ファイル" %>
      <%= f.file_field :image, size: "1x1", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :url, "参考URL" %>
      <%= f.text_area :url, size: "1x1", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    </div>
  <% end %>
<br>
