<div class="container">
<br>
  <div class="card">
    <div class="card-header">
      <h4><%= link_to 'ユーザー名', root_path, class: "text-right" %></h4>
      <h2 class=""><%= @post.title %></h2>
        <div class="pull-right">
          <%= link_to 'Home', root_path %>
          <%= link_to '編集', edit_post_path %>
          <%= link_to '削除', post_path, method: "delete", data: { confirm: "Are you sure?" } %>
        </div>
    </div>
    <div class="card-body">
      <h3 class="card-title">要約</h3>
      <%= @post.summary %>
      <hr>
      <h3 class="card-title">記事詳細</h3>
      <%= @post.description %>
      <% if @post.image.attached? %>
        <h4 class="card-title">画像</h4>
        <%= image_tag @post.image %>
      <% end %>
      <hr>
      <h6 class="card-title">URL：<%= @post.url %></h6>
    </div>
  </div>
</div>